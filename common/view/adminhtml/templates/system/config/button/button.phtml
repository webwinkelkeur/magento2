<script>
    require([
        'jquery',
        'prototype'
    ], function(jQuery){
        var resultSpan = jQuery('#result');
        jQuery('#import_button').click(function () {
            var params = {};
            new Ajax.Request('<?= $block->escapeUrl($block->getAjaxUrl()); ?>', {
                parameters:     params,
                loaderArea:     false,
                asynchronous:   true,
                onCreate: function() {
                    resultSpan.find('.connecting').show();
                    jQuery('#stats_result').text('');
                    jQuery('#button-valued-note').text('');
                },
                onSuccess: function(response) {
                    console.log(response);
                    resultSpan.find('.connecting').hide();
                    var resultText = '';
                    if (response.status > 200) {
                        resultText = response.statusText;
                    } else {
                        var json = response.responseJSON;
                        if (typeof json.msg != 'undefined') {
                            resultText = json.msg;
                        }
                    }
                    jQuery('#stats_result').html(resultText);
                }
            });
        });

    });
</script>
<?= $block->getButtonHtml() ?>
<p class="note" id="button-valued-note">
    <span><?php echo __('Last import: ') . $block->escapeHtml($block->getLastImported()) ?></span>
</p>
